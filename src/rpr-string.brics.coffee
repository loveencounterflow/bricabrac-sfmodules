#===========================================================================================================
BRICS =

  #=========================================================================================================
  ### NOTE Future Single-File Module ###
  require_rpr_string: ->

    #===========================================================================================================
    rpr_string = ( t ) ->
      # thx to https://github.com/browserify/node-util/blob/master/util.js
      R = JSON.stringify t
      R = R.replace /// ^" | "$ ///g, ''
      R = R.replace /// '       ///g, "\\'"
      R = R.replace /// \\"     ///g, '"'
      return "'#{R}'"

    #.......................................................................................................
    return exports = { rpr_string, }

#===========================================================================================================
Object.assign module.exports, BRICS


